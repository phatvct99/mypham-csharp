<canvas id="myChart" width="60" height="30"></canvas>

<script>
    var ctx = document.getElementById('myChart').getContext('2d');
    var myChart = new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ["@arrayList[0]","@arrayList[1]","@arrayList[2]","@arrayList[3]","@arrayList[4]","@arrayList[5]","@arrayList[6]","@arrayList[7]","@arrayList[8]","@arrayList[9]","@arrayList[10]","@arrayList[11]"],
